<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <style>
    body {
      background-color: #f9f9f9;
      text-align: center;
      font-family: sans-serif;
    }

    .post {
      border: 1px solid #ccc;
      padding: 15px;
      margin: 10px auto;
      width: 60%;
      background-color: white;
    }

    .post h2 {
      margin: 0 0 10px 0;
    }

    .post p {
      text-align: justify;
    }

    .new-post {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Blog</h1>
  <div class="new-post">
    <a href="/cadastrar_post.html"><button>Novo Post</button></a>
  </div>

  <% posts.forEach(function(post) { %>
    <div class="post">
      <h2><%= post.titulo %></h2>
      <h4><%= post.resumo %></h4>
      <p><%= post.conteudo %></p>
    </div>
  <% }); %>
</body>
</html>

